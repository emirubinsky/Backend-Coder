<div class="text-center">
    <form class="form-signin" method="POST" id="loginForm">
        <img class="mb-4" src="/path/to/enterprise-logo.png" alt="Enterprise Logo" width="72" height="72">

        <h1 class="h3 mb-3 font-weight-normal">Organica Studio</h1>

        <label for="email" class="sr-only">Email address</label>
        <input type="email" id="email" name="email" class="form-control mb-2" placeholder="johndoe@gmail.com" required
            autofocus>
        <label for="password" class="sr-only">Password</label>
        <input type="password" id="password" name="password" class="form-control mb-3" placeholder="mySecretPassword123"
            required>

        <div class="row justify-content-center">
            <div class="col-6">
                <button class="btn btn-lg btn-primary btn-block" type="submit" id="local_login">Sign in</button>
            </div>
            <div class="col-6">
                <a href="/forgot_password" class="btn btn-lg btn-outline-dark btn-block mb-3">Recover</a>
                <!-- Convert to button -->

            </div>
        </div>

        <p class="mt-3 mb-3 text-muted">or</p>
        <a href="http://localhost:8080/register" class="btn btn-lg btn-outline-dark btn-block mb-3">Sign up</a>

        <div class="social-login">
            <p class="text-muted mb-3">Sign in with:</p>
            <div class="row justify-content-center">
                <div class="col-6">
                    <a href="http://localhost:8080/users/github" class="btn btn-lg btn-outline-danger btn-block"><i class="fab fa-google mr-2"></i>
                        GitHub</a>
                </div>

                <div class="col-6">
                    <a href="#" class="btn btn-lg btn-outline-danger btn-block"><i class="fab fa-google mr-2"></i>
                        Google</a>
                </div>
            </div>
        </div>

        <div id="errorMessage" class="alert alert-danger" role="alert" style="display: none;"></div>
    </form>

</div>

<script type="module" src="/js/login.js"></script>